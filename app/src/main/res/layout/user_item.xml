<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivProfilePic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUserProfileName"
        android:layout_alignTop="@id/ivProfilePic"
        android:layout_toRightOf="@+id/ivProfilePic"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:textStyle="bold"
        android:gravity="top"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvScreenProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="handle"
        android:layout_below="@+id/tvUserProfileName"
        android:layout_alignLeft="@+id/tvUserProfileName"
        android:layout_alignStart="@+id/tvUserProfileName"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Description"
        android:id="@+id/tvProfileText"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_alignLeft="@+id/ivProfilePic"
        android:layout_alignStart="@+id/ivProfilePic"
        android:layout_below="@+id/ivProfilePic"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>